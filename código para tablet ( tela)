/* Estilos gerais para dispositivos maiores */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

/* Estilos específicos para tablets em modo paisagem e retrato */
@media only screen and (min-width: 600px) and (max-width: 1024px) {
    body {
        background-color: #f0f0f0; /* Exemplo de alteração de cor de fundo */
    }

    header {
        padding: 20px;
        text-align: center;
    }

    .container {
        width: 90%;
        margin: 0 auto;
    }

    h1 {
        font-size: 2em; /* Ajuste o tamanho da fonte para tablets */
    }

    nav {
        display: flex;
        justify-content: center;
        margin: 20px 0;
    }

    nav a {
        margin: 0 10px;
        text-decoration: none;
        color: #333;
    }
}

/* Estilos adicionais para tablets em modo retrato */
@media only screen and (orientation: portrait) and (min-width: 600px) and (max-width: 768px) {
    .container {
        width: 100%;
        padding: 10px;
    }

    h1 {
        font-size: 1.5em;
    }

    nav {
        flex-direction: column;
    }

    nav a {
        margin: 5px 0;
    }
}

/* Estilos adicionais para tablets em modo paisagem */
@media only screen and (orientation: landscape) and (min-width: 769px) and (max-width: 1024px) {
    .container {
        width: 90%;
        padding: 20px;
    }

    h1 {
        font-size: 2.5em;
    }

    nav {
        flex-direction: row;
    }
}
